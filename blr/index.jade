- var cdn           = "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0"
- var michael_buble = "Michael Bublé"
- var width         = {lg:560, md:560*.8, sm:560*.75, xs:560*.5}
- var width         = {lg:315, md:315*.8, sm:315*.75, xs:315*.5}
- var v1            = "//www.youtube.com/embed/YjaZNYSt7o0?list=PL801E403FE41FCAB1"
- var v2            = "//www.youtube.com/embed/gcF9ICgLqi4"

doctype html
html(lang=en)
	head
		//- Need charset because of latin characters
		meta(charset="UTF-8")
		link(rel="stylesheet" href="#{cdn}/css/bootstrap.min.css")
		link(rel="stylesheet" href="#{cdn}/css/bootstrap-theme.min.css")
		title Bad Lip Reading -vs- #{michael_buble}
		style(type="text/css").
			.flex-video {
				position       : relative;
				padding-top    : 25px;
				padding-bottom : 67.5%;
				height         : 0;
				margin-bottom  : 16px;
				overflow       : hidden;
			}
			.flex-video.widescreen { padding-bottom: 57.25%; }
			.flex-video.vimeo      { padding-top: 0; }
			.flex-video iframe,
			.flex-video object,
			.flex-video embed {
				position : absolute;
				top      : 0;
				left     : 0;
				width    : 100%;
				height   : 100%;
			}
			@media only screen and (max-device-width: 800px), only screen and (device-width: 1024px) and (device-height: 600px), only screen and (width: 1280px) and (orientation: landscape), only screen and (device-width: 800px), only screen and (max-width: 767px) {
				.flex-video { padding-top: 0; }
			}
	body
		main.container
			.alert.alert-info(role="alert") 
				<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				strong Bad Lip Reading
				p
					| This is a song done by both #{michael_buble} and Bad Lip Reading. It's interesting how this tune
					| completely changes the feeling of the video, and yet, could probably be applied to anything.</p>
			.row
				.col-xs-6
					h2.visible-lg #{michael_buble} <small>Haven't Met You Yet</small>
					h3.visible-md #{michael_buble} <small>Haven't Met You Yet</small>
					h3.visible-sm #{michael_buble} <small>Haven't Met You Yet</small>
					h4.visible-xs #{michael_buble} <small>Haven't Met You Yet</small>
					.flex-video.widescreen
						iframe(src="#{v2}" frameborder=0 allowfullscreen=1)
				.col-xs-6
					h2.visible-lg Bad Lip Reading <small>Russian Unicorn</small>
					h3.visible-md Bad Lip Reading <small>Russian Unicorn</small>
					h3.visible-sm Bad Lip Reading <small>Russian Unicorn</small>
					h4.visible-xs Bad Lip Reading <small>Russian Unicorn</small>
					.flex-video.widescreen
						iframe(src="#{v1}" frameborder=0 allowfullscreen=1)
		// At end to increase loading speed
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
		script(src="#{cdn}/js/bootstrap.min.js")
