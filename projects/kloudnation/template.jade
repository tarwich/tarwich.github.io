- var cdn       = "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0"
- var jquery_js = "https://code.jquery.com/jquery-1.11.1.min.js"

mixin time(date)
	| &nbsp;
	span.label.label-primary.time
		span.glyphicon.glyphicon-time
		|  #{date}
		block

doctype html
html(lang=en)
	head
		title
			block title
		meta(charset="UTF-8")
		link(rel="stylesheet" href="#{cdn}/css/bootstrap.min.css")
		link(rel="stylesheet" href="#{cdn}/css/bootstrap-theme.min.css")
		style.
			.time.label, .time.label div { display: inline; }
		block head
	body
		main.container
			block body
		// At end to increase loading speed
		script(type="text/javascript" src=jquery_js)
		script(src="#{cdn}/js/bootstrap.min.js")
		script(src="http://localhost:35729/livereload.js")
		block scripts